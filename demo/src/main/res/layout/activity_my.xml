<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context=".MyActivity">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="插值器一般表示（横轴时间，纵轴变化值）"/>
    <daimajia.com.easing.DrawView
        android:id="@+id/history"
        android:layout_width="match_parent"
        android:layout_height="280dp" />
    <daimajia.com.easing.DrawView
        android:id="@+id/speed"
        android:layout_width="match_parent"
        android:layout_height="280dp"
        android:layout_below="@id/history"/>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignTop="@id/speed"
        android:text="AE表示（横轴时间，纵轴速度）："/>
    <View
        android:layout_alignLeft="@+id/history"
        android:id="@+id/target"
        android:layout_width="8dp"
        android:layout_alignBottom="@+id/history"
        android:layout_height="8dp"
        android:layout_marginBottom="60dp"
        android:background="@drawable/circle"/>
    <EditText
        android:id="@+id/et_var"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/speed"
        android:layout_marginTop="-55dp"
        android:hint="如果需要参数，请输入（仅作用于部分interpolator)"/>
    <ListView
        android:layout_marginTop="540dp"
        android:id="@+id/easing_list"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"></ListView>
</RelativeLayout>
